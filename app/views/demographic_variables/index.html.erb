<h1>Listing demographic_variables</h1>

<table>
  <tr>
    <th>Name</th>
    <th>Is default</th>
    <th>Display values</th>
    <th>Demographic type</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @demographic_variables.each do |demographic_variable| %>
  <tr>
    <td><%= demographic_variable.name %></td>
    <td><%= demographic_variable.is_default %></td>
    <td><%= demographic_variable.display_values %></td>
    <td><%= demographic_variable.demographic_type_id %></td>
    <td><%= link_to 'Show', demographic_variable %></td>
    <td><%= link_to 'Edit', edit_demographic_variable_path(demographic_variable) %></td>
    <td><%= link_to 'Destroy', demographic_variable, method: :delete, data: { confirm: 'Are you sure?' } %></td>
  </tr>
<% end %>
</table>


<%= form_for @research_application, :html => { :class => 'form-horizontal' } do |f| %>
  <div class="control-group">
    <%= f.label :research_id, :class => 'control-label' %>
    <div class="controls">
      <%= f.text_field :research_id, :class => 'text_field' %>
    </div>
  </div>
  <div class="control-group">
    <%= f.label :starts_on, :class => 'control-label' %>
    <div class="controls">
      <%= f.text_field :starts_on, :class => 'text_field' %>
    </div>
  </div>
  <div class="control-group">
    <%= f.label :ends_on, :class => 'control-label' %>
    <div class="controls">
      <%= f.text_field :ends_on, :class => 'text_field' %>
    </div>
  </div>
  <div class="control-group">
    <%= f.label :number, :class => 'control-label' %>
    <div class="controls">
      <%= f.text_field :number, :class => 'text_field' %>
    </div>
  </div>

  <div class="form-actions">
    <%= f.submit nil, :class => 'btn btn-primary' %>
    <%= link_to t('.cancel', :default => t("helpers.links.cancel")),
                research_applications_path, :class => 'btn' %>
  </div>
<% end %>

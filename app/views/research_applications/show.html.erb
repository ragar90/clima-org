<%- model_class = ResearchApplication -%>
<div class="page-header">
  <h1><%=t '.title', :default => model_class.model_name.human.titleize %></h1>
</div>

<dl class="dl-horizontal">
  <dt><strong><%= model_class.human_attribute_name(:research_id) %>:</strong></dt>
  <dd><%= @research_application.research_id %></dd>
  <dt><strong><%= model_class.human_attribute_name(:starts_on) %>:</strong></dt>
  <dd><%= @research_application.starts_on %></dd>
  <dt><strong><%= model_class.human_attribute_name(:ends_on) %>:</strong></dt>
  <dd><%= @research_application.ends_on %></dd>
  <dt><strong><%= model_class.human_attribute_name(:number) %>:</strong></dt>
  <dd><%= @research_application.number %></dd>
</dl>

<div class="form-actions">
  <%= link_to t('.back', :default => t("helpers.links.back")),
              research_applications_path, :class => 'btn'  %>
  <%= link_to t('.edit', :default => t("helpers.links.edit")),
              edit_research_application_path(@research_application), :class => 'btn' %>
  <%= link_to t('.destroy', :default => t("helpers.links.destroy")),
              research_application_path(@research_application),
              :method => 'delete',
              :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) },
              :class => 'btn btn-danger' %>
</div>

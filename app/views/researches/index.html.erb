<%- model_class = Research -%>
<%= render "/shared/gchart_load" %>
<div class="row">
  <div class="span11">
    <div class="page-header">
      <h1><%=t '.title', :default => model_class.model_name.human.pluralize %></h1>
    </div>
    
    <div class="row">
      <% @researches.each do |research| %>
        <div class="span5">
          <!--result window-->
          <%= render partial: "/shared/data_window", locals:{object: research, render_chart: research.is_confirmed?, data: research.total_perception} %>
          <!--result window-->
        </div>
      <% end %>
    </div>
  </div>
</div>
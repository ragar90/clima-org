<%- model_class = Research -%>
<%= render "/shared/gchart_load" %>
<div class="row">
  <div class="span11">
    <div class="page-header">
      <h1><%=t '.title', :default => model_class.model_name.human.pluralize %></h1>
    </div>
    
    <div class="row">
      <% @researches.each do |research| %>
        <div class="span5">
          <!--result window-->
          <%= gchart_window research, (research.is_confirmed? ? :home : :info), research.total_perception, :pie, title: "Datos Globales de la percepcion de clima organizacional" %>
          <!--result window-->
        </div>
      <% end %>
    </div>
  </div>
</div>